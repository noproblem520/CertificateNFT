<body>
    <h1>mintAndTransferNFT</h1>
    <hr>
    <br>
    <div>
        
        <label for="baseURI">baseURI for token：</label>
        <input id="baseURI" type="text" placeholder="Please enter the baseURI.">
        <button onclick="deploySmartContract($('#baseURI').val())" class="">Deploy</button>
    </div>
    <br>
    <hr>
    <br>
    <div>
        <label for="toAddr">toAddress：</label>
        <input id="toAddr" type="text">
        <button onclick="mintAndTransfer($('#toAddr').val())" class="">Transfer</button>
    </div>
    <br>
    <hr>
    <br>
    <div>
        <div style="float:left">TotalSupply=</div>
        <div id="totalSupply" style="float:left"></div>
    </div>
    <br>
    <hr>
    <br>
    <div>
        <div>
            <label for="OwnerOfTokenID">Please enter tokenID to search who owns it:</label>
            <input id="OwnerOfTokenID" type="text">
            <button onclick="getOwnerOf($('#OwnerOfTokenID').val())" class="">search</button>
        </div>
        
        <div id="OwnerOf"></div>
        <div style="float:left"></div>
        <div id="TokenURILabel" style="float:left"></div>
        <div style="float:left">
            <a id="tokenURI" href="" target="_blank" style="float:left"></a>
        </div>
        
    </div>
